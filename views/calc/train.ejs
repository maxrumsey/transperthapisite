<html>
  <head>
    <%- include('../_header'); %>
    <title>Train Station Lookup | TransPerth API</title>
  </head>
  <body>
    <%- include('../_navbar'); %>
    <header class='mini-header'>
      <h1>Train Station Lookup</h1>
    </header>
    <div id='form-container'>

      <form>
        <div id='error-container' class="form-group">
        </div>
        <div class="form-group">
          <label for="train-direction-input">Direction</label>
          <select type="select" class="form-control custom-select" id="train-direction-input">
            <option selected value='to Perth'>To Perth</option>
            <option value='from Perth'>From Perth</option>
          </select>
        </div>
        <div class="form-group">
          <label for="train-line-input">Train Line</label>
          <input type="text" class="form-control" id="train-line-input" placeholder="Mandurah">
        </div>
        <div class="form-group">
          <label for="train-station-input">Train Station</label>
          <input type="text" class="form-control" id="train-station-input" placeholder="Cockburn Central">
        </div>
        <div class='form-group'>
          <button type="button" class="btn btn-primary" id='form-submit' onclick='trainTimesFormSubmit()' disabled>Submit</button>
        </div>
      </form>
      <div id='form-output'>
      </div>
    </div>
    <%- include('../_footer'); %>
  </body>
</html>
