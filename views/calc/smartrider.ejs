<html>
  <head>
    <%- include('../_header'); %>
    <title>SmartRider Lookup | TransPerth API</title>
  </head>
  <body>
    <%- include('../_navbar'); %>
    <header class='mini-header'>
      <h1>SmartRider Look Up</h1>
    </header>
    <div id='form-container'>

      <form>
        <div id='error-container' class="form-group">
        </div>
        <div class="form-group">
          <label for="smartrider-input">SmartRider Number</label>
          <input type="text" class="form-control" id="smartrider-input" placeholder="SR 1234 5678 9">
        </div>
        <div class='form-group'>
          <button type="button" class="btn btn-primary" id='form-submit' onclick='smartRiderFormSubmit()' disabled>Submit</button>
        </div>
      </form>
      <div id='form-output'>
        <ul>
          <li><b>Balance: </b><span id='form_output_balance'></span></li>
          <li><b>Concession Type: </b><span id='form_output_conc_type'></span></li>
          <li><b>Concession Expiry: </b><span id='form_output_conc_expiry'></span></li>
          <li><b>Autoload Enabled: </b><span id='form_output_autoload'></span></li>
        </ul>
      </div>
    </div>
    <%- include('../_footer'); %>
  </body>
</html>
